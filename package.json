{
	"name": "email-domain-check",
	"version": "2.0.6",
	"description": "An all-in-one email domain verification library with built-in support for DNS, MX, SPF, SMTP, DKIM, DMARC, BIMI, TLSRPT and MTA-STS checks.",
	"type": "module",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		},
		"./package.json": "./package.json"
	},
	"keywords": [
		"email",
		"dkim",
		"spf",
		"authenticated-received-chain",
		"dmarc",
		"bimi",
		"tlsrpt",
		"mta-sts",
		"email-domain",
		"mx",
		"smtp",
		"mta",
		"email-validation",
		"validate-email",
		"mailcheck",
		"email-checker",
		"email-validator"
	],
	"scripts": {
		"build:esm": "tsc -p tsconfig.esm.json",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"build": "npm run clean && npm run build:esm && npm run build:cjs",
		"postbuild": "cpy ./configs/package.cjs.json ./dist/cjs/ --flat --rename=package.json && cpy ./root-certs ./dist/",
		"clean": "rimraf dist",
		"test": "vitest run --reporter=default",
		"test:pkg": "vitest run --config vitest.config.package.ts --reporter=default",
		"test:exp": "node scripts/example.test.mjs",
		"test:all": "npm run test && npm run test:pkg && npm run test:exp",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:all": "biome check --write .",
		"format:check": "biome check ."
	},
	"dependencies": {
		"node-forge": "^1.3.2",
		"tldts": "^7.0.19"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@types/node": "^24.10.1",
		"@types/node-forge": "^1.3.14",
		"@vitest/ui": "^4.0.14",
		"cpy-cli": "^6.0.0",
		"dkim-key": "^2.0.0",
		"dmarc-solution": "^1.2.5",
		"parse-spf": "^1.0.1-1",
		"rimraf": "^6.1.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.14"
	},
	"homepage": "https://github.com/mehmet-kozan/email-domain-check",
	"bugs": {
		"url": "https://github.com/mehmet-kozan/email-domain-check/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mehmet-kozan/email-domain-check.git"
	},
	"files": [
		"dist"
	],
	"author": "Mehmet Kozan",
	"license": "MIT",
	"engines": {
		"node": ">=18"
	}
}
